<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center">
    <LinearLayout
        android:id="@+id/ll_upper_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/bt_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Save" />

        <Button
            android:id="@+id/bt_hist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="21"
            android:text="Hist" />

        <Button
            android:id="@+id/bt_camera"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:text="CAM" />

        <Button
            android:id="@+id/bt_debug"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:text="Info" />

        <Button
            android:id="@+id/bt_conf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:text="Conf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="135.09"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.joonho.oneoomt.MapsActivity" />
            <ImageButton
                android:id="@+id/imgbt_menu_popup"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|left"
                app:srcCompat="@drawable/home" />
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="120dp"
                android:layout_gravity="right|center_vertical"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imb_hist"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/list2_24" />
                <ImageButton
                    android:id="@+id/imb_save"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/save_2_24" />
                <ImageButton
                    android:id="@+id/imb_pic"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/camera2_24" />
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_weight="1" />
                <ImageButton
                    android:id="@+id/imgbt_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/refresh24" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="85dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom|right"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbt_zoomin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/zoom_in_32" />

                <ImageButton
                    android:id="@+id/imgbt_zoomout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/zoom_out_32" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/bt_popup_menu"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:text="Menu" />

        <TextView
            android:id="@+id/tv_cur"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/holo_green_light" />

        <Button
            android:id="@+id/mybutton1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="+" />

        <Button
            android:id="@+id/mybutton2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="-" />


        <Button
            android:id="@+id/btn_Mark"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="*" />

        <Button
            android:id="@+id/btn_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="Map" />
    </LinearLayout>

</LinearLayout>

