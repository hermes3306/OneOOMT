<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="135.09"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.joonho.oneoomt.RunningActivity" />
                <ImageButton
                    android:id="@+id/imgbt_menu_popup"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|left"
                    app:srcCompat="@drawable/home" />

                <LinearLayout
                    android:id="@+id/llo_left_top"
                    android:layout_width="140dp"
                    android:layout_height="56dp"
                    android:layout_gravity="top|left"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.7"
                        android:background="@android:color/background_dark">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_avgspd"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:paddingLeft="5dp"
                                android:text="Avg:-"
                                android:textColor="@android:color/background_light"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_alt"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:paddingLeft="5dp"
                                android:text="Alt:-"
                                android:textColor="@android:color/background_light"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llo_right_top"
                    android:layout_width="140dp"
                    android:layout_height="56dp"
                    android:layout_gravity="top|right"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.7"
                        android:background="@android:color/holo_blue_bright">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_what"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:paddingLeft="5dp"
                                android:text="What:-"
                                android:textColor="@android:color/background_light"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_who"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:paddingLeft="5dp"
                                android:text="Who:-"
                                android:textColor="@android:color/background_light"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llo_right_bottom"
                    android:layout_width="140dp"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="70dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.7"
                        android:background="@android:color/holo_blue_bright">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_bearing"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:paddingLeft="5dp"
                                android:text="Bearing:-"
                                android:textColor="@android:color/background_light"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_bearingmode"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:paddingLeft="5dp"
                                android:text="Mode:-"
                                android:textColor="@android:color/background_light"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llo_left_center"
                    android:layout_width="200dp"
                    android:layout_height="350dp"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="90dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="190dp">

                                <TextView
                                    android:id="@+id/tv_onPic1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="5dp"
                                    android:paddingLeft="5dp"
                                    android:textColor="@android:color/background_light"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:text=""/>

                                <ImageView
                                    android:id="@+id/imv_pic1"
                                    android:layout_width="140dp"
                                    android:layout_height="190dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="20dp"
                                    android:adjustViewBounds="false"
                                    android:background="@android:drawable/editbox_background"
                                    android:cropToPadding="true"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="5dp"
                                    android:scaleType="fitStart"
                                    android:visibility="invisible" />
                            </FrameLayout>



                            <ImageView
                                android:id="@+id/imv_pic2"
                                android:layout_width="140dp"
                                android:layout_height="190dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="20dp"
                                android:adjustViewBounds="false"
                                android:background="@android:drawable/editbox_background"
                                android:cropToPadding="true"
                                android:paddingBottom="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp"
                                android:scaleType="centerCrop"
                                android:visibility="invisible" />

                            <ImageView
                                android:id="@+id/imv_pic3"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="bottom"
                                android:adjustViewBounds="false"
                                android:clickable="false"
                                android:cropToPadding="true"
                                android:paddingBottom="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp"
                                android:scaleType="centerCrop"
                                android:visibility="invisible" />
                        </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="180dp"
                    android:layout_gravity="right|center_vertical"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imb_pic"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/camera_48" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/imb_magic"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/magic48" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/imb_3Pics"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/custommarker2_48" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/imgbt_refresh"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/reload4148" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|right"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imgbt_zoomin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/zoom_in_32" />

                    <ImageButton
                        android:id="@+id/imgbt_zoomout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/zoom_out_32" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/imgbt_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:background="@android:color/transparent"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/stop64" />

                <ImageButton
                    android:id="@+id/imgbt_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:background="@android:color/transparent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/run64" />
            </FrameLayout>

         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:background="@android:color/transparent"
                android:textColor="@color/colorAccent"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.17"
                android:textColor="?attr/colorControlNormal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:fontFamily="sans-serif-condensed"
                android:textColor="?attr/colorControlNormal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.01"
                android:fontFamily="sans-serif-condensed"
                android:gravity="right"
                android:paddingLeft="20dp"
                android:textColor="?attr/colorControlNormal"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/tv_dummy"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:elevation="24dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>


</LinearLayout>


